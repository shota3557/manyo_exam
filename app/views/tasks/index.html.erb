<h1>投稿一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>投稿内容</th>
  </tr>

  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
  </tr>
  <% end %>
</table>

<br>

<%= link_to "新規投稿へ", new_task_path %>