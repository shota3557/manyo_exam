<h3>以下の内容で投稿します</h3>

<%= form_with(model: @task, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :end_date %>

  <p>タイトル：<%= @task.name %></p>
  <p>投稿内容:<%= @task.content %></p>
  <p>終了期限:<%= @task.end_date %></p>

  <%= form.submit "投稿する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>  