<h1>ユーザ一覧</h1>

  <table>
  <thead>
    <tr>
      <th>ユーザID</th>
      <th>ユーザ名</th>
      <th>タスク数</th>
    </tr>
  </thead>  
  
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to 'ユーザの詳細画面へ', admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザを編集する', edit_admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザを削除する', admin_user_path(user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "新規投稿へ", new_task_path %>
<%= link_to "ユーザ新規登録へ", new_admin_user_path %>